      "type": "TextBlock",
      "text": "The production environment ID",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_production_environment_id",
      "value": "${{ secrets.OCTOPUS_PRODUCTION_ENVIRONMENT_ID }}"
