{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Input.Text",
      "id": "generator",
      "value": "generator-code",
      "isVisible": false
    },
    {
      "type": "TextBlock",
      "text": "What type of extension do you want to create?"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "answer.string.type",
      "isMultiSelect": false,
      "choices": [
        {
          "title": "New Extension (TypeScript)",
          "value": "ext-command-ts"
        },
        {
          "title": "New Extension (JavaScript)",
          "value": "ext-command-js"
        },
        {
          "title": "New Color Theme",
          "value": "ext-colortheme"
        },
        {
          "title": "New Language Support",
          "value": "ext-language"
        },
        {
          "title": "New Code Snippets",
          "value": "ext-snippets"
        },
        {
          "title": "New Keymap",
          "value": "ext-keymap"
        },
        {
          "title": "New Extension Pack",
          "value": "ext-extensionpack"
        },
        {
          "title": "New Language Pack (Localization)",
          "value": "ext-localization"
        },
        {
          "title": "New Web Extension (TypeScript)",
          "value": "ext-command-web"
        },
        {
          "title": "New Notebook Renderer (TypeScript)",
          "value": "ext-notebook-renderer"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "What's the name of your extension?"
    },
    {
      "type": "Input.Text",
      "id": "answer.string.displayName",
      "value": ""
    },
    {
      "type": "TextBlock",
      "text": "What's the identifier of your extension?"
    },
    {
      "type": "Input.Text",
      "id": "answer.string.name",
      "value": "test"
    },
    {
      "type": "TextBlock",
      "text": "What's the description of your extension?"
    },
    {
      "type": "Input.Text",
      "id": "answer.string.description",
      "value": ""
    },
    {
      "type": "TextBlock",
      "text": "Initialize a git repository?"
    },
    {
      "type": "Input.Toggle",
      "id": "answer.boolean.gitInit",
      "value": true
    },
    {
      "type": "TextBlock",
      "text": "Bundle the source code with webpack?"
    },
    {
      "type": "Input.Toggle",
      "id": "answer.boolean.webpack",
      "value": false
    },
    {
      "type": "TextBlock",
      "text": "Which package manager to use?"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "answer.string.pkgManager",
      "isMultiSelect": false,
      "choices": [
        {
          "title": "npm",
          "value": "npm"
        },
        {
          "title": "yarn",
          "value": "yarn"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "< Back",
      "verb": "openCard",
      "data": {
        "filename": "index.json"
      }
    },
    {
      "type": "Action.Execute",
      "title": "Download",
      "verb": "downloadTemplate"
    }
  ]
}