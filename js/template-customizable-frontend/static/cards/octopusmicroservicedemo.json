    {
      "type": "TextBlock",
      "text": "The AWS secret key.",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.aws_secret_key",
      "value": "${{ secrets.AWS_SECRET_ACCESS_KEY }}"
    },
    {
      "type": "TextBlock",
      "text": "The AWS region to create the state bucket in",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.aws_region",
      "value": "us-west-1"
    },
    {
      "type": "TextBlock",
      "text": "The development environment ID",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_development_app_environment_id",
      "value": "${{ secrets.OCTOPUS_DEVELOPMENT_ENVIRONMENT_ID }}"
    },
    {
      "type": "TextBlock",
      "text": "The development security environment ID",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_development_security_environment_id",
      "value": "${{ secrets.OCTOPUS_DEVELOPMENT_SECURITY_ENVIRONMENT_ID }}"
