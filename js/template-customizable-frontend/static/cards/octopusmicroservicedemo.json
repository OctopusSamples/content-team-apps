    {
      "type": "TextBlock",
      "text": "The production environment ID",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_production_app_environment_id",
      "value": "${{ secrets.OCTOPUS_PRODUCTION_ENVIRONMENT_ID }}"
    },
    {
      "type": "TextBlock",
      "text": "The production only lifecycle ID",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_production_only_lifecycle_id",
      "value": "${{ secrets.OCTOPUS_PRODUCTION_ONLY_LIFECYCLE_ID }}"
    },
    {
      "type": "TextBlock",
      "text": "The simple lifecycle ID",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_simple_lifecycle_id",
      "value": "${{ secrets.OCTOPUS_SIMPLE_LIFECYCLE_ID }}"
    },
    {
      "type": "TextBlock",
      "text": "The production security environment ID",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_production_security_environment_id",
      "value": "${{ secrets.OCTOPUS_PRODUCTION_SECURITY_ENVIRONMENT_ID }}"
    },
    {
      "type": "TextBlock",
      "text": "The ID of the DockerHub feed",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_dockerhub_feed_id",
      "value": "${{ secrets.OCTOPUS_DOCKERHUB_FEED_ID }}"
    },
    {
      "type": "TextBlock",
      "text": "The GitHub Personal Access Token used to access package feeds",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.github_package_pat",
      "value": "${{ secrets.GH_PACKAGES_PAT }}"
    }
