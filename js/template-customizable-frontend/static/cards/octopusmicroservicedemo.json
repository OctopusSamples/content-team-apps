{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Input.Text",
      "id": "generator",
      "value": "@octopus-content-team/generator-octopus-project@0.1.68:googlemicroservicesdemo",
      "isVisible": false
    },
    {
      "type": "TextBlock",
      "text": "The Project Name",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.project_name",
      "value": "googlemicroservicesdemo"
    },
    {
      "type": "TextBlock",
      "text": "The hostname of your Octopus instance.",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_server",
      "value": "${{ secrets.OCTOPUS_SERVER }}"
    },
    {
      "type": "TextBlock",
      "text": "The Octopus API key.",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_apikey",
      "value": "${{ secrets.OCTOPUS_APIKEY }}"
    },
    {
      "type": "TextBlock",
      "text": "The Octopus Space",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_space_id",
      "value": "${{ secrets.OCTOPUS_SPACE_ID }}"
    },
    {
      "type": "TextBlock",
      "text": "The lifecycle to assign to the project",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.octopus_application_lifecycle_id",
      "value": "${{ secrets.OCTOPUS_APPLICATION_LIFECYCLE_ID }}"
    },
    {
      "type": "TextBlock",
      "text": "The AWS access key.",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "answer.string.aws_access_key",
      "value": "${{ secrets.AWS_ACCESS_KEY_ID }}"
