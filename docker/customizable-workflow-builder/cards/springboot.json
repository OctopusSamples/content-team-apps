      "isRequired": true
    },
    {
      "type": "TextBlock",
      "text": "Database"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "question.string.databaseType",
      "value": "postgresql",
      "isMultiSelect": false,
      "choices": [
        {
          "title": "Postgresql",
          "value": "postgresql"
        },
        {
          "title": "MySQL",
          "value": "mysql"
        },
        {
          "title": "MariaDB",
          "value": "mariadb"
        }
      ]
    },
    {
      "type": "TextBlock",
