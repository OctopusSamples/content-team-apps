      "choices": [
        {
          "title": "FlywayDB",
          "value": "flywaydb"
        },
        {
          "title": "Liquibase",
          "value": "liquidbase"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Which build tool do you want to use?"
